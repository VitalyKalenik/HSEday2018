<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/organisation_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/faculty_descrition"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/organisation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="134123"
            android:textColor="@color/primary_text"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/organisation_image" />

        <TextView
            android:id="@+id/organisation_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="134123"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/organisation_name" />


        <TextView
            android:id="@+id/organisation_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autoLink="web"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="134123"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/organisation_description" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>