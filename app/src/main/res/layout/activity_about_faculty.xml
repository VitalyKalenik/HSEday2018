<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".hse.AboutFacultyActivity"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/faculty_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/faculty_descrition"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/faculty_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/primary_text"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/faculty_image" />

        <TextView
            android:id="@+id/faculty_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/faculty_name" />

        <TextView
            android:id="@+id/faculty_departments_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:text="@string/departments"
            app:layout_constraintTop_toBottomOf="@id/faculty_description" />

        <TextView
            android:id="@+id/faculty_departments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/faculty_departments_title" />

        <TextView
            android:id="@+id/faculty_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/faculty_departments" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>